CompileFlags:
  Add:
    - -Wall
    - -Wextra 
    - -Werror
    - -std=c++98
    - -pedantic
    - -g
    - -isystem/usr/include/c++/11
    - -isystem/usr/include/x86_64-linux-gnu/c++/11
    - -isystem/usr/include/c++/11/backward
    - -isystem/usr/lib/gcc/x86_64-linux-gnu/11/include
    - -isystem/usr/local/include
    - -isystem/usr/include/x86_64-linux-gnu
    - -isystem/usr/include
    - -D_GNU_SOURCE
    - -D__USE_MISC
    - -D_ISOC99_SOURCE
  Remove:
    - -Wc++11-extensions
    - -Wc++14-extensions
    - -Wc++17-extensions
    - -Wc++20-extensions
    - -Wc++2a-extensions
    - -Wc++2b-extensions

Diagnostics:
  Suppress:
    # Suppress clangd-specific noise but keep real C++98 errors
    - "*libc*"
    - "*LIBC_NAMESPACE*"
    - "*__llvm_libc*"
    - "*includes are not stored properly*" 
    - "*within 'LIBC_NAMESPACE_DECL'*"
    
    # Suppress modern C++ suggestions while keeping C++98 compliance errors
    - "*modernize-*"
    - "*use 'auto'*"
    - "*use nullptr*"
    - "*use range-based for*"
    - "*prefer member initializer*"
    - "*use emplace_back*"
    - "*use std::make_unique*"
    - "*redundant string initialization*"
    
    # Keep actual errors but suppress pedantic warnings that don't affect C++98 compliance
    - "*extra ';'*"
    - "*unused parameter*" 
    - "*variable is not needed*"
    - "*parameter * is not used*"
    
  UnusedIncludes: None
  MissingIncludes: None
  
  ClangTidy:
    Add: []
    Remove:
      - "*modernize*"
      - "*readability-redundant-*" 
      - "*performance*"
      - "*misc-non-private-member-variables*"
      - "*cppcoreguidelines*"
      - "*google*"
      - "*llvm*"
      - "*cert*"
      - "*hicpp*"
      - "*bugprone-easily-swappable-parameters*"

Index:
  Background: Skip
  StandardLibrary: No

InlayHints:
  Enabled: false
  ParameterNames: false
  DeducedTypes: false

Hover:
  ShowAKA: false

Completion:
  AllScopes: false
